<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.main {
			background-color: white;
		}
		.cont{
			margin: 15px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.main}">
	    <div class="{style.cont}">
		<div>
			<div>Server Name</div>
			<g:TextBox ui:field="hostname">test.mosquitto.org</g:TextBox>
		</div>

		<div>
			<div>Server Port</div>
			<g:IntegerBox ui:field="port">80</g:IntegerBox>
		</div>

		<div>
			<div>client id</div>
			<g:TextBox ui:field="clientId">gwtMqTT</g:TextBox>
		</div>

		<div>
			<div>Username</div>
			<g:TextBox ui:field="username"></g:TextBox>
		</div>

		<div>
			<div>Password</div>
			<g:TextBox ui:field="password"></g:TextBox>
		</div>
		</div>
		<g:Button ui:field="createServerTrigger">Open Connection</g:Button>
	</g:HTMLPanel>
</ui:UiBinder> 