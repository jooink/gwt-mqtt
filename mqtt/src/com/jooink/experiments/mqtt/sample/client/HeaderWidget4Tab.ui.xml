<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.main{
			width: 100%;
			height: 100%;
			position: relative;
		}

		.cont {
		}

		.title {
			display: inline-block;
		}
		.trigger {
		}
		.status {
			display: none;
		}
		
		.close {
			margin-right: 10px;
			margin-left: 10px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.main}">
	    <div class="{style.cont}">
	    	<g:HTML ui:field="title" addStyleNames="{style.title}"></g:HTML>
			<g:Anchor  addStyleNames="{style.close}" ui:field="trigger">close</g:Anchor>
	  	</div>
<!-- 		<g:HTML addStyleNames="{style.status}" ui:field="status"></g:HTML> -->
	</g:HTMLPanel>
</ui:UiBinder> 